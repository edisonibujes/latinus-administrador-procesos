<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <message-bundle>Language_es_ES</message-bundle>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>
        
    </application>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/welcomeJSF.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
   
    <managed-bean>
        <managed-bean-name>currentDate</managed-bean-name>
        <managed-bean-class>java.util.Date</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <component>
        <component-type>org.primefaces.component.FileUpload</component-type>
        <component-class>net.latinus.arcom.comun.intalio.wrapper.controller.base.NonTransientFileUpload</component-class>
    </component>
    
    <validator>
        <validator-id>caracteresEspeciales</validator-id>
        <validator-class>net.latinus.arcom.comun.intalio.wrapper.util.validator.Validaciones</validator-class>                         
    </validator>
    
    <validator>
        <validator-id>txtAreaValidator</validator-id>
        <validator-class>net.latinus.arcom.comun.intalio.wrapper.util.validator.InputTextAreaValidator</validator-class>                         
    </validator>
    
    <validator>
        <validator-id>cedulaValidator</validator-id>
        <validator-class>net.latinus.arcom.comun.intalio.wrapper.util.validator.CedulaValidator</validator-class>
    </validator>
    
    <validator>
        <validator-id>rucValidator</validator-id>
        <validator-class>net.latinus.arcom.comun.intalio.wrapper.util.validator.RucValidator</validator-class>
    </validator>
    
    <validator>
        <validator-id>numeroDocumentoValidator</validator-id>
        <validator-class>net.latinus.arcom.comun.intalio.wrapper.util.validator.NumeroDocumentoValidator</validator-class>
    </validator>
    
    <validator>
        <validator-id>soloNumerosValidator</validator-id>
        <validator-class>net.latinus.arcom.comun.intalio.wrapper.util.validator.SoloNumerosValidator</validator-class>
    </validator>
    
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>proyectoMejora_listar</from-outcome>
            <to-view-id>/proyectoMejora/listar.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>

    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>
        
</faces-config>
