<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="arcompjpa" transaction-type="RESOURCE_LOCAL">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    <class>net.latinus.admin.process.comun.persistencia.jpa.entidades.Gad</class>
    <class>net.latinus.admin.process.comun.persistencia.jpa.entidades.TipoEvento</class>
    <class>net.latinus.admin.process.comun.persistencia.jpa.entidades.Proceso</class>
    <class>net.latinus.admin.process.comun.persistencia.jpa.entidades.Usuario</class>
    <class>net.latinus.admin.process.comun.persistencia.jpa.entidades.Variable</class>
    <class>net.latinus.admin.process.comun.persistencia.jpa.entidades.Formulario</class>
    <class>net.latinus.admin.process.comun.persistencia.jpa.entidades.Log</class>
    <class>net.latinus.admin.process.comun.persistencia.jpa.entidades.Grilla</class>
    <class>net.latinus.admin.process.comun.persistencia.jpa.entidades.Evento</class>
    <properties>
      <property name="openjpa.RuntimeUnenhancedClasses" value="supported"/>
      <property name="openjpa.jdbc.SchemaFactory" value="native(ForeignKeys=true)"/>
      <property name="openjpa.jdbc.MappingDefaults" value="ForeignKeyDeleteAction=restrict, JoinForeignKeyDeleteAction=restrict"/>
      <property name="openjpa.Compatibility" value="CheckDatabaseForCascadePersistToDetachedEntity=true"/>
      <property name="openjpa.jdbc.DBDictionary" value="sqlserver(UniqueIdentifierAsVarbinary=false)"/>
      <property name="openjpa.Multithreaded" value="false"/>
      <property name="openjpa.Optimistic" value="false"/>
      <property name="openjpa.TransactionMode" value="local"/>
      <property name="openjpa.ConnectionFactoryMode" value="local"/>
      <property name="openjpa.LockManager" value="none"/>
      <property name="openjpa.Log" value="none"/>
      <property name="openjpa.jdbc.DBDictionary" value="postgres"/>
    </properties>
  </persistence-unit>
</persistence>
